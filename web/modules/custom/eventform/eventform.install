/**
 * Implements hook_requirements().
 */
function eventform_requirements($phase) {
  $requirements = [];

  if ($phase == 'runtime') {
    $value = mt_rand(0, 100);
    $requirements['eventform_status'] = [
      'title' => t('EventForm status'),
      'value' => t('EventForm value: @value', ['@value' => $value]),
      'severity' => $value > 50 ? REQUIREMENT_INFO : REQUIREMENT_WARNING,
    ];
  }

  return $requirements;
}
