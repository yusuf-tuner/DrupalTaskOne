<?php

/**
 * @file
 * Install, update and uninstall functions for the EventForm module.
 */

/**
 * Implements hook_install().
 */
function eventforms_install() {
  \Drupal::messenger()->addStatus(__FUNCTION__);
}

/**
 * Implements hook_uninstall().
 */
function eventforms_uninstall() {
  \Drupal::messenger()->addStatus(__FUNCTION__);
}

